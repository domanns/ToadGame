#: kivy 2.0.0

<RulesWindow>

    size: root.width, root.height


    Label:
        text: "RULES"
        font_size: 55
        font_name:"IMPACT"
        size_hint: 0.5, 0.1
        pos_hint: {'center_x': 0.19, 'top': 0.9}


    Label:
        text: """Use LEFT and RIGHT arrows to move the toad.\nUse SPACE or ARROW UP to jump.\n\nThe toad needs to eat! Swallow eatable creatures like flies, snails,\n earthworms or mosquitos and avoid the harming ones\nlike wasps, hornets or bugs which will take away your Lives.\nYou can regain Lives by eating earthworms and ladybugs.\n\nYou increase your Score by eating. The more animals you eat,\nthe higher your score.\n"""
        font_size: 18
        size_hint: 0.8, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.5}
        halign: 'left'




<ScoresWindow>

    Label:
        text: "RULES"
        font_size: 30
        font_name:"IMPACT"
        size_hint: 1, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.9}

    Label:
        text: """1. You can use left and right arrows to move the toad.\n\n2. The toad needs to eat!"""
        font_size: 13

        size_hint: 0.7, 0.6
        pos_hint: {'center_x': 0.5, 'top': 0.7}



<Interface>

    FloatLayout:


        canvas:
            Color:
                rgba: 0.61, 1, 0.56, 0.4

            Rectangle:
                pos: root.pos
                size: root.size

        size: root.width, root.height
        pos: 0,0

        FloatLayout:
            size: root.width, root.height
            pos: 0,0


            #Image:
            #    source: 'pictures/toad.png'
            #    size: root.width*0.01, root.height*0.01
            #    pos: root.width*0.1, root.height*0.1


            Label:      # Tytu≈Ç aplikacji
                id: name
                size_hint: 0.2, 0.1
                pos_hint: {'center_x':0.5, 'top':0.9}
                text: "Toad Game"
                font_size: 80
                font_name: "IMPACT"
                bold: True

            Button:
                id: start
                text: "START"
                size_hint: 0.7, 0.1
                pos_hint: {'center_x':0.5, 'top':0.70}
                font_size: 30
                font_name: "IMPACT"
                bold: True
                background_color: 1.1, 1.4, 1, 1
                #on_press:

            Button:
                id: rules
                text: "RULES"
                size_hint: 0.7, 0.1
                pos_hint: {'center_x':0.5, 'top':0.55}
                font_size: 30
                font_name: "IMPACT"
                bold: True
                background_color: 1.1, 1.4, 1, 1
                on_press: root.show_rules()

            Button:
                id: scores
                text: "BEST SCORES"
                size_hint: 0.7, 0.1
                pos_hint: {'center_x':0.5, 'top':0.4}
                font_size: 30
                font_name: "IMPACT"
                bold: True
                background_color: 1.1, 1.4, 1, 1
                #on_press:

            Button:
                id: author
                text: "ABOUT AUTHOR"
                size_hint: 0.7, 0.1
                pos_hint: {'center_x':0.5, 'top':0.25}
                font_size: 30
                font_name: "IMPACT"
                bold: True
                background_color: 1.1, 1.4, 1, 1
                #on_press:


